---
import TimelineItem from "./TimelineItem.astro";
import BriefcaseIcon from "@/components/icons/Briefcase.astro";

const EXPERIENCE = [
    {
        id: "ideo",
        period: "Agosto 2022 - Actualidad",
        title: "Desarrollador Móvil/Web/Backend",
        subtitle: "IDEO Software",
        description:
            "Desarrollo de aplicaciones móviles en con React Native, Micronaut (Java) como backend y ReactJS y Grails como frontend para paneles de administración.",
        badgs: [
            "React Native",
            "ReactJS",
            "TypeScript",
            "i18next",
            "NodeJS",
            "Telegram API",
            "Micronaut",
            "Grails",
            "Java",
            "JWT",
            "MySQL",
            "Flutter",
            "Docker",
            "Git",
            "Bitbucket",
            "Sentry",
            "AWS S3",
            "AWS EC2",
            "AWS SNS",
            "Firebase Remote Config",
            "Firebase Analytics",
            "Firebase In-App Messaging",
        ],
        link: "https://ideosoftware.com.mx/",
    },
    {
        id: "casau",
        period: "Abril 2021 - Junio 2022 (En pausa)",
        title: "Desarrollador Flutter",
        subtitle: "Freelance",
        description:
            "Desarrollo de aplicación móvil en Flutter para Android y iOS estilo Airbnb para público jóven de México.",
        badgs: [
            "Flutter",
            "Dart",
            "GetX",
            "Google Maps",
            "NestJS",
            "JWT",
            "TypeScript",
            "NodeJS",
            "MySQL",
            "MongoDB",
            "Firebase Authentication",
            "Firebase Firestore",
            "Firebase Storage",
            "Firebase Analytics",
            "Firebase Remote Config",
            "Git",
            "GitHub",
            "Sentry",
        ],
    },
];
---

<h2 class='text-2xl font-semibold flex gap-x-3 mb-2 items-center text-gray-900 dark:text-white'>
    <BriefcaseIcon class='size-4 md:size-6' />
    Experiencia Laboral
</h2>

<ol class='relative border-s border-gray-400 dark:border-gray-700 ml-3'>
    {
        EXPERIENCE.map((it, i) => (
            <TimelineItem
                id={it.id}
                period={it.period}
                title={it.title}
                subtitle={it.subtitle}
                description={it.description}
                isLastest={i === 0}
                badgs={it.badgs}
            >
                {it.link && (
                    <a
                        href={it.link}
                        target='_blank'
                        class='inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700'
                    >
                        Ver más
                        <svg
                            class='w-3 h-3 ms-2 rtl:rotate-180'
                            aria-hidden='true'
                            xmlns='http://www.w3.org/2000/svg'
                            fill='none'
                            viewBox='0 0 14 10'
                        >
                            <path
                                stroke='currentColor'
                                stroke-linecap='round'
                                stroke-linejoin='round'
                                stroke-width='2'
                                d='M1 5h12m0 0L9 1m4 4L9 9'
                            />
                        </svg>
                    </a>
                )}
            </TimelineItem>
        ))
    }
</ol>
