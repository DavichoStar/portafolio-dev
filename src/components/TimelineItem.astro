---
interface Props {
    id: string;
    period: string;
    title: string;
    isLastest?: boolean;
    subtitle?: string;
    description: string;
    badgs?: string[];
}

const { id, title, subtitle, description, period, isLastest, badgs } = Astro.props;
---

<li id={id} class='mb-10 ms-6'>
    <div
        class='absolute w-3 h-3 bg-gray-400 rounded-full mt-1.5 -start-1.5 border border-gray-500 dark:border-gray-900 dark:bg-gray-700'
    >
    </div>
    <!-- TIempo -->
    <time class='block mb-2 text-sm font-normal leading-none text-gray-600 dark:text-gray-500'>{period}</time>

    <!-- Titulo -->
    <h3 class='flex items-center mb-1 text-lg font-semibold text-sky-900 dark:text-sky-300'>
        {title}
        {
            isLastest && (
                <span class='bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ms-3'>
                    Latest
                </span>
            )
        }
    </h3>

    <!-- Subtitulo -->
    <h4 class='mb-2 text-base font-bold text-gray-500 dark:text-gray-400'>
        {subtitle}
    </h4>

    <!-- DescripciÃ³n -->
    <p class='mb-4 text-base font-normal text-gray-500 dark:text-gray-400 text-balance'>
        {description}
    </p>

    <!-- Badges -->
    {
        badgs && (
            <div class='mb-4 flex flex-wrap gap-2 pr-5'>
                {badgs.map((badg) => (
                    <span class='bg-gray-100 text-gray-800 text-sm font-medium px-2.5 py-0.5 rounded dark:bg-gray-900 dark:text-gray-400'>
                        {badg}
                    </span>
                ))}
            </div>
        )
    }

    <!-- Otros -->
    <slot />
</li>
